#!/bin/bash

#############################
## DEFINE GLOBAL VARIABLES ##
#############################
NC='\033[0m'
RED='\033[0;31m'
#BOLDRED='\033[1;31m'
#IRED='\033[0;91m'
GREEN='\033[0;32m'
#BOLDGREEN='\033[1;32m'
MAGENTA='\033[0;35m'
#BLUE='\033[0;34m'
FHATOS="${MAGENTA}FhatOS${NC}"
#############################

echo -e "${FHATOS} Development Script"

if [[ -z $2 ]]; then
  environ=" "
  echo -e "  [processing ${GREEN}all environments${NC}]"
else
  environ="--environment $2"
  echo -e "  [processing ${GREEN}$environ${NC}]"
fi

if [[ $1 == "clean" ]]; then
   rm -rf _deps
   rm -rf CMakeFiles
   rm CMakeCache.txt
   rm cmake_install.cmake
   platformio run --target clean
  echo -e "${RED}IMPORTANT${NC}"
  echo -e "    ...next operation builds project from scratch ${GREEN}cmake${NC} ${RED}=>${NC} ${GREEN}make${NC} ${RED}=>${NC} ${GREEN}platformio${NC}]"
elif [[ $1 == "test" ]]; then
  platformio run --target clean ${environ}; cmake .; make; platformio test ${environ} -v
elif [[ $1 == "build" ]]; then
  platformio run --target clean ${environ}; cmake .; make; platformio run ${environ}
elif [[ $1 == "upload" ]]; then
  platformio run --target clean ${environ}; cmake .; make; platformio run ${environ} --target upload
else
   echo -e "usage: 
  fhat-dev {clean | test | build | upload} {esp32 | native | <empty>}
    fhat-dev clean
    fhat-dev test native
    fhat-dev build esp32
    fhat-dev upload esp32
    fhat-dev test"
fi

if [[ $? == 0 ]]; then
    echo -e "${GREEN}SUCCESS"
else
    echo -e "${RED}FAILURE"
fi
