#!/bin/bash

#############################
## DEFINE GLOBAL VARIABLES ##
#############################
NC='\033[0m'
RED='\033[0;31m'
#BOLDRED='\033[1;31m'
#IRED='\033[0;91m'
GREEN='\033[0;32m'
#BOLDGREEN='\033[1;32m'
MAGENTA='\033[0;35m'
BLUE='\033[0;34m'
FHATOS="${MAGENTA}F${GREEN}h${BLUE}a${RED}t${MAGENTA}O${BLUE}S${NC}"
LB="${MAGENTA}[${NC}"
RB="${MAGENTA}]${NC}"
#############################

if [ -z "$FHATOS_HOME" ]; then
  echo -e " ${RED}FHATOS_HOME${NC} must be set to proceed";
  exit 1
else
  # using build as working directory to protect from FHAT32 file system mount
  cd "${FHATOS_HOME}/build" || exit 1
fi
if [[ $1 == "esp32" ]]; then
  rlwrap --always-readline --ansi-colour-aware pio device monitor -e $1 -f direct --echo
else
  rlwrap --ansi-colour-aware ${FHATOS_HOME}/build/fhatos.out "$@"
fi
