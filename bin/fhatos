#############################
## DEFINE GLOBAL VARIABLES ##
#############################
NC='\033[0m'
RED='\033[0;31m'
#BOLDRED='\033[1;31m'
#IRED='\033[0;91m'
GREEN='\033[0;32m'
#BOLDGREEN='\033[1;32m'
MAGENTA='\033[0;35m'
BLUE='\033[0;34m'
FHATOS="${MAGENTA}F${GREEN}h${BLUE}a${RED}t${MAGENTA}O${BLUE}S${NC}"
LB="${MAGENTA}[${NC}"
RB="${MAGENTA}]${NC}"
#############################################
if [ -z "$FHATOS_HOME" ]; then
  echo -e " ${RED}FHATOS_HOME${NC} must be set to proceed";
  exit 1
else
  # using build as working directory to protect from FHAT32 file system mount
  cd "${FHATOS_HOME}/build" || exit 1
fi
#############################################
#############################################
RLWRAP_BASE="--quote-characters \"\\\"'\" --always-readline --ansi-colour-aware --extra-char-after-completion ( -f ${FHATOS_HOME}/bin/.fhatos_completions"
if [[ $1 == esp32* ]]; then
  rlwrap ${RLWRAP_BASE} pio device monitor -e $1 -b 115200 -f direct --echo
elif [ ! -f $FHATOS_HOME/build/fhatos.out ]; then
    echo -e "${RED}ERROR${NC} ${FHATOS} unable to locate ${BLUE}${FHATOS_HOME}/build/fhatos.out${NC}. Ensure ${FHATOS} has been built using ${BLUE}bin/fhat-dev${NC}."
else
  rlwrap ${RLWRAP_BASE} "${FHATOS_HOME}"/build/fhatos.out "$@"
fi
